{{#if indexcard}}
    <div class="index-card index-card__{{type}} {{type}}">
        <div class="tweet-link"><a target="_blank" href="https://twitter.com/intent/tweet?url=http://ig.ft.com/sites/uk/economic-dashboard/%23{{type}}&amp;text=44 charts that explain the UK economy" si:link="social-media_twitter" alt="Tweet these {{type}} figures"></a></div>
        <div class="title">{{category}}</div>
        <div class="blurb">{{{shortblurb}}}</div>
        <div class="headline-figs">
            <div class="bignum-heading">{{bignum-heading}}</div>
            <div class="bignum">{{big-number}}<span>{{bignum-units}}</span></div>
            <div class="arrow {{arrow-direction}}">{{arrows arrow-direction}}</div>   
        </div>
        <div class="small-figs">
            <div class="small-figs-holder">
                <div class="small-figs-heading">{{short-heading}}</div>
                <div class="small-figs-value">{{short-change}}<span>{{units}}</span></div>
            </div>
            <div class="small-figs-holder right">
                <div class="small-figs-heading">{{annual-heading}}</div>
                <div class="small-figs-value">{{annual-change}}<span>{{units}}</span></div>
            </div>
        </div>
        <div class="timestamp">Last updated: {{date updated}}</div>
    </div>

    {{else}}
        <div class="indicator-card indicator-card__{{type}}">
            <div class="indicator-card__title {{type}}">
                <div class="title"><span>{{category}}</span><br/>{{indicator}}</div>
            </div>
            <div class="indicator-card__body">
                <div class="chart">
                <object type="image/svg+xml" data="{{charturl}}">
                <img src="http://image.webservices.ft.com/v1/images/raw/{{charturl}}?width=308&amp;source=ig_bloomberg">
                </object>
                </div>
                <div class="blurb">
                {{{shortblurb}}}
                </div>
                {{!-- <div class="timestamp">Last updated: {{date updated}}</div> --}}
                <div class="now-casting"><p>Data provided by</p><a href="https://www.now-casting.com/" target="_blank"><img src="http://www.ft.com/ig/static/sites/2014/economic-indicators/nowcastinglogo5.png" alt=""></a></div>

            </div> 
        </div>
{{/if}}